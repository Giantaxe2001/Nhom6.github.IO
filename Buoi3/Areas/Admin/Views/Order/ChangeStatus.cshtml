@model Buoi3.Areas.Admin.Controllers.OrderController.ChangeStatusViewModel

<h2>Change Order Status</h2>

<form asp-action="ChangeStatus" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="CurrentStatus">Current Status</label>
        <input type="text" asp-for="CurrentStatus" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="CurrentStatus">New Status</label>
        <select asp-for="CurrentStatus" asp-items="@Model.StatusList" class="form-control">
            <option value="">Select Status</option>
        </select>
        <span asp-validation-for="CurrentStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Status</button>
</form>
