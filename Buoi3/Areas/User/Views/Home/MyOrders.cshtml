@model IEnumerable<Buoi3.Models.Order>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipentName)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.OrderDate.ToString("yyyy-MM")
                </td>
                <td>
                   $ @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipentName)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td
               
            </tr>
             <td>
                    <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-primary">View</a>

                    <a asp-controller="Order" asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-primary">Cancel</a>
                </td>
        }
    </tbody>
</table>
