@model IEnumerable<Buoi3.Models.Product> 
<h2>Search Results</h2>
<div class="intro-excerpt">
    <form method="post" action="@Url.Action("Shop", "Home")">
        <button type="submit" class="btn btn-primary btn-add-to-cart">Back to Shop</button>
    </form>
</div>
@if (!Model.Any())
{
    <p>No products found.</p>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price</p>
                        <a href="Details/@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
